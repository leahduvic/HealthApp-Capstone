@model PersonalSettingsViewModel

@{
    ViewData["Title"] = "Personal Settings";
    ViewData.AddActivePage(ManageNavPages.PersonalSettings);
}

<h4>@ViewData["Title"]</h4>
<p class="text-info">
    Enter some basic personal health information.
</p>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BodyWeight"></label>
                <input asp-for="BodyWeight" class="form-control" />
                <span asp-validation-for="BodyWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BMI"></label>
                <input asp-for="BMI" class="form-control" />
                <span asp-validation-for="BMI" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default" asp-action="PersonalSettings">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


