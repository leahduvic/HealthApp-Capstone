@model HealthApp.Models.ManageViewModels.PersonalSettingsViewModel    


@{
    ViewData["Title"] = "SettingsDetails";
}

<h4>Details</h4>

<p>
    <a asp-action="UpdateDetails">Update Information</a>
</p>

@foreach (var item in Model.Measurements)
{
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => item.Date)
            </dt>
            <dd>
                @Html.DisplayFor(model => item.Date)
            </dd>
            <dt>
                Body Weight
            </dt>
            <dd>
                @Html.DisplayFor(model => item.BodyWeight)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => item.BMI)
            </dt>
            <dd>
                @Html.DisplayFor(model => item.BMI)
            </dd>
        </dl>
    </div>
}


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


